{
  "name": "tropx-motion",
  "version": "1.5.1",
  "description": "Motion Capture Application with Real-time WebSocket Streaming",
  "main": "dist/main/electron/main/main.js",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"wait-on http://localhost:3000 && wait-on dist/main/electron/main/main.js && electron .\"",
    "full": "powershell.exe -Command \"Get-NetTCPConnection -LocalPort 3000 -ErrorAction SilentlyContinue | ForEach-Object { Stop-Process -Id $_.OwningProcess -Force -ErrorAction SilentlyContinue }\" & concurrently \"npx convex dev\" \"npm run build && npm run dev\"",
    "dev:manual": "npm run build:main && npm run dev:renderer",
    "start": "npm run build && node scripts/start-smart.js",
    "start:smart": "node scripts/start-smart.js",
    "start:electron": "electron .",
    "start:pi": "npm run build && bash start.sh",
    "dev:main": "tsc-watch -p tsconfig.main.json --onSuccess \"echo Main process compiled\"",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:pi": "npm run build",
    "rebuild": "electron-rebuild",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "package": "electron-forge package",
    "package:win": "npm run clean && npm run build && electron-builder --win nsis",
    "package:win:portable": "npm run clean && npm run build && electron-builder --win portable",
    "package:mac": "npm run clean && npm run build && electron-builder --mac",
    "package:mac:portable": "npm run clean && npm run build && electron-builder --mac zip",
    "package:linux": "npm run clean && npm run build && electron-builder --linux",
    "package:linux-arm64": "npm run clean && npm run build && electron-builder --linux --arm64",
    "package:pi": "npm run clean && npm run build && electron-builder --linux AppImage --arm64",
    "package:pi:portable": "npm run clean && npm run build && electron-builder --linux tar.gz --arm64",
    "deploy:pi": "bash scripts/deploy-to-pi.sh",
    "deploy:pi:docker": "bash scripts/build-pi-docker.sh",
    "update:pi": "bash scripts/quick-update-pi.sh",
    "clean": "rimraf dist build",
    "postinstall": "electron-builder install-app-deps",
    "make": "electron-forge make"
  },
  "keywords": [
    "electron",
    "motion-capture",
    "bluetooth",
    "websocket",
    "imu",
    "sensors"
  ],
  "author": "TropX",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
    "@electron-forge/plugin-fuses": "^7.6.0",
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^3.6.0",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-icon-builder": "^2.0.1",
    "png2icons": "^2.0.1",
    "postcss": "^8.4.49",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.5",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.1",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-25",
    "@auth/core": "^0.37.0",
    "@convex-dev/auth": "^0.0.90",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-scroll-area": "^1.2.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.17.4",
    "convex-helpers": "^0.1.108",
    "dotenv": "^16.4.5",
    "electron-log": "^5.2.4",
    "electron-store": "^10.0.0",
    "embla-carousel-react": "^8.6.0",
    "fflate": "^0.8.2",
    "framer-motion": "^11.13.1",
    "lucide-react": "^0.468.0",
    "next-themes": "^0.4.4",
    "node-ble": "^1.10.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.14.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss": "^3.4.16",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.3.3",
    "uuid": "^11.0.3",
    "vaul": "^1.1.1",
    "ws": "^8.18.0"
  },
  "build": {
    "appId": "com.tropx.motion",
    "productName": "TropX Motion",
    "icon": "assets/icon.png",
    "directories": {
      "output": "build",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rcs,swp,dSYM,DS_Store}"
    ],
    "extraFiles": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.healthcare-fitness",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "assets/icon.png",
      "sign": null,
      "certificateFile": null,
      "certificatePassword": null,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.png",
      "uninstallerIcon": "assets/icon.png",
      "installerHeader": "assets/icon.png",
      "installerSidebar": "assets/icon.png",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Science"
    },
    "asar": true,
    "asarUnpack": [
      "**/node_modules/native-*/**",
      "**/node_modules/bufferutil/**",
      "**/node_modules/utf-8-validate/**",
      "**/node_modules/@abandonware/noble/**",
      "**/node_modules/@abandonware/bluetooth-hci-socket/**",
      "**/node_modules/usb/**",
      "**/*.node"
    ],
    "compression": "store"
  },
  "electronDownload": {
    "cache": "./electron-cache"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.54.0",
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.5"
  },
  "overrides": {
    "bluetooth-hci-socket": "npm:@abandonware/bluetooth-hci-socket@^0.5.3-12"
  }
}
