{
  "name": "motion-capture-electron",
  "version": "1.0.0",
  "description": "Motion Capture Application with Real-time WebSocket Streaming",
  "main": "dist/main/electron/main/main.js",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"wait-on http://localhost:3000 && wait-on dist/main/electron/main/main.js && electron .\"",
    "dev:manual": "npm run build:main && npm run dev:renderer",
    "start:electron": "electron .",
    "dev:main": "tsc-watch -p tsconfig.main.json --onSuccess \"echo Main process compiled\"",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "package": "electron-forge package",
    "package:win": "npm run build && electron-builder --win nsis",
    "package:win:portable": "npm run build && electron-builder --win portable",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "clean": "rimraf dist build",
    "postinstall": "electron-builder install-app-deps",
    "start": "electron-forge start",
    "make": "electron-forge make"
  },
  "keywords": [
    "electron",
    "motion-capture",
    "bluetooth",
    "websocket",
    "imu",
    "sensors"
  ],
  "author": "TropX",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.0",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1",
    "png2icons": "^2.0.1",
    "postcss": "^8.4.0",
    "rimraf": "^5.0.0",
    "sharp": "^0.34.3",
    "tsc-watch": "^6.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.9",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.263.1",
    "next-themes": "^0.4.6",
    "noble": "^1.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.3.3",
    "uuid": "^9.0.0",
    "vaul": "^1.1.2",
    "ws": "^8.14.0"
  },
  "build": {
    "appId": "com.tropx.motion",
    "productName": "TropX Motion",
    "icon": "assets/icon.png",
    "directories": {
      "output": "build",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rcs,swp,dSYM,DS_Store}"
    ],
    "extraFiles": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.healthcare-fitness",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "assets/icon.png",
      "sign": null,
      "certificateFile": null,
      "certificatePassword": null,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.png",
      "uninstallerIcon": "assets/icon.png",
      "installerHeader": "assets/icon.png",
      "installerSidebar": "assets/icon.png",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Science"
    },
    "asar": true,
    "asarUnpack": [
      "**/node_modules/native-*/**",
      "**/node_modules/bufferutil/**",
      "**/node_modules/utf-8-validate/**"
    ],
    "compression": "store"
  },
  "electronDownload": {
    "cache": "./electron-cache"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9",
    "utf-8-validate": "^6.0.5"
  }
}
