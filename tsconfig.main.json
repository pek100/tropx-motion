{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "outDir": "dist/main",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": [
    "electron/main/**/*",
    "electron/preload/**/*",
    "src/services/**/*",
    "sdk/**/*",
    "motionProcessing/**/*",
    "ble-bridge/**/*",
    "websocket-bridge/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "electron/renderer"
  ]
}